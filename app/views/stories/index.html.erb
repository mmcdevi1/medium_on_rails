<h1 class="hero-title">Your stories</h1>
<%= render 'links' %>
<% @posts.each do |post| %>
  <div class="row post-block">
    <div class="col-sm-2">
      <%= image_tag(post.attachment.url(:thumb)) %>
    </div>
    <div class="col-sm-10">
      <h3 style="font-weight:700"><%= link_to post.title, edit_post_path(post) %></h3>
      <p class="subtitle"><%= link_to "This is the subtitle placeholder", post %></p>
      <p class="text-muted">Last edited <%= time_ago_in_words(post.updated_at) %></p>
    </div>
  </div>
<% end %>