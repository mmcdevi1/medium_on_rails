<header class="navbar navbar-static-top bs-docs-nav" id="top" role="banner">
  <div class="container-fluid">
    <div class="navbar-header">
      <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <% if @post.attachment.exists? %>
      <%= link_to "Medium on Rails", root_path, class: "navbar-brand" %>
      <% else %>
      <%= link_to "Medium on Rails", root_path, class: "navbar-brand", style: "color:#333" %>
      <% end %>
    </div>
    <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
      <ul class="nav navbar-nav">
        
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if signed_in? %>
        <li id="fat-menu" class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= current_user.first_name %> <%= current_user.last_name %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li>
              <%= link_to "Profile", user_path(current_user) %>
            </li>
            <li>
              <%= link_to "Your drafts and stories", stories_draft_path %>
            </li>
            <li>
              <%= link_to "Settings", "#" %>
            </li>
            <li class="divider"></li>
            <li>
              <%= link_to "Sign out", logout_path, method: "delete" %>
            </li>
          </ul>
        </li>
        <% if params[:action] == 'new' || params[:action] == 'edit' %>
        <li>          
          <%= link_to "Publish", "#", class: "btn btn-green-outline navbar-btn", id: "publish-btn" %>
        </li>  
        <% end %>      
        <% else %>
        <li>
          <%= link_to "Log In", login_path %>
        </li>
        <li>
          <%= link_to "Register", register_path, class: "btn btn-default navbar-btn" %>
        </li>
        <% end %>
        
        
        
      </ul>
    </nav>
  </div>
</header>