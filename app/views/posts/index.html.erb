<div class="text-center">
  <h1 class="hero-title">Medium</h1>
  <p style="font-size:22px;">Everyone's stories and ideas</p>
  <%= link_to "Learn more", "#", class: "btn btn-default" %>
</div>
<% @posts.each do |post| %>
  <div class="row post-block">
    <% if post.attachment.exists? %>
    <div class="col-sm-2">
      <%= image_tag(post.attachment.url(:thumb)) %>
    </div>
    <% end %>
    <div class="col-sm-10">
      <h3><%= link_to post.title, post %></h3>
      <% if post.subtitle %>
        <p class="subtitle"><%= link_to post.subtitle, post %></p>
      <% end %>
      <%= link_to post.user.first_name + " " + post.user.last_name, post.user %>
    </div>
  </div>
<% end %>